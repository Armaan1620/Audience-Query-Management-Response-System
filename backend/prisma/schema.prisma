generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Team {
  id          String   @id @default(uuid())
  name        String
  description String?
  users       User[]
  queries     Query[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String
  role      String
  teamId    String?
  team      Team?    @relation(fields: [teamId], references: [id])
  assigned  Query[]  @relation("QueryAssignee")
  activities QueryActivity[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Query {
  id           String          @id @default(uuid())
  externalId   String?         @unique
  channel      String
  subject      String
  message      String
  customerName String?
  customerEmail String?
  tags         Json
  priority     String
  status       String
  assignmentId String?
  assignee     User?           @relation("QueryAssignee", fields: [assignmentId], references: [id])
  teamId       String?
  team         Team?           @relation(fields: [teamId], references: [id])
  aiInsights   Json?
  activities   QueryActivity[]
  createdAt    DateTime        @default(now())
  updatedAt    DateTime        @updatedAt
}

model QueryActivity {
  id        String   @id @default(uuid())
  queryId   String
  query     Query    @relation(fields: [queryId], references: [id])
  actorId   String?
  actor     User?    @relation(fields: [actorId], references: [id])
  action    String
  metadata  Json?
  createdAt DateTime @default(now())
}
