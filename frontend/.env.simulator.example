# Base URL for your ingestion service (local dev)
INGESTION_BASE_URL=http://localhost:4000

# Optional per-channel overrides (if they differ)
# SOCIAL_INGEST_URL=https://api.mycompany.com/audience/social
# CHAT_INGEST_URL=https://api.mycompany.com/audience/chat
# COMMUNITY_INGEST_URL=https://api.mycompany.com/audience/community

# HTTP client behavior
HTTP_CLIENT_TIMEOUT_MS=8000

# SMTP / Email (for Nodemailer)
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=587
SMTP_USER=your_smtp_username
SMTP_PASS=your_smtp_password
SMTP_SECURE=false

# Email addresses
EMAIL_INGESTION_TO=ingestion@example.com
EMAIL_FROM=simulator@example.com

# Bulk generator config
BULK_MESSAGE_COUNT=200
BULK_CONCURRENCY=20
